<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aguitech.compartetuexperiencia.MenuPrincipalActivity"
    tools:showIn="@layout/activity_menu_principal">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:id="@+id/btnMenuPrincipalBlog"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/menuprincipalblog"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:id="@+id/btnMenuPrincipalTrivia"
        android:layout_below="@+id/btnMenuPrincipalBlog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/menuprincipaltrivia"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:id="@+id/btnMenuPrincipalEventos"
        android:layout_below="@+id/btnMenuPrincipalTrivia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/menuprincipaleventos" />
</RelativeLayout>
